{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"parser": "babel-eslint",
	"extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "react-hooks", "jest"],
	"rules": {
		"indent": ["warn", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["warn", "windows"],
		"quotes": ["warn", "double"],
		"semi": ["warn", "always"],
		"no-console": "warn",
		"no-unused-vars": "warn",
		"react/prop-types": 1,
		"react/no-unused-state": "warn",
		"react-hooks/rules-of-hooks": "error"
	},
	"settings": {
		"react": {
			"version": "16.6.3"
		}
	}
}
